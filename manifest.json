{
    "manifest_version": 3,
    "name": "GR++ Redesign",
    "version": "1.1",
    "description": "The gr++ site looks horrible. Let's change that!",
    "icons": {
        "48": "content/technion-48-48.png",
        "128": "content/technion-128-128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "{f8d8f5e1-c95e-4833-9f4c-3fd5972e6619}"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://grades.cs.technion.ac.il/*"
            ],
            "run_at": "document_start",
            "css": [
                "src/style.css"
            ]
        },
        {
            "matches": [
                "*://grades.cs.technion.ac.il/*"
            ],
            "run_at": "document_end",
            "js": [
                "src/fix-course-material-button.js",
                "src/add-semester-select.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": [
                "*://grades.cs.technion.ac.il/*"
            ],
            "resources": [
                "src/*",
                "content/*"
            ]
        }
    ]
}
